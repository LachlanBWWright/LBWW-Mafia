# Next.js Environment Variables
# Copy this file to .env and fill in the values

# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Next Auth
# You can generate a new secret on the command line with:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret
# Only required in production
AUTH_SECRET=""

# Next Auth Discord Provider
# Get these from: https://discord.com/developers/applications
AUTH_DISCORD_ID=""
AUTH_DISCORD_SECRET=""

# Drizzle Database
# Local dev (docker-compose): postgresql://postgres:postgres@localhost:5432/mernmafia
# Supabase (production): get the connection string from your Supabase project settings
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mernmafia"

# Node Environment (optional, defaults to development)
# NODE_ENV="development"

AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# Socket backend selection: 'socketio' or 'partykit'
NEXT_PUBLIC_SOCKET_BACKEND=socketio

# URL for PartyKit server (local dev: http://localhost:1999, deployed: your partykit URL)
NEXT_PUBLIC_PARTYKIT_URL=http://localhost:1999

# URL for Socket.IO server
NEXT_PUBLIC_SOCKETIO_URL=http://localhost:8000