{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@trpc/server": [
        "./node_modules/@trpc/server"
      ],
      "@trpc/server/*": [
        "./node_modules/@trpc/server/*"
      ],
      "superjson": [
        "./node_modules/superjson"
      ],
      "zod": [
        "./node_modules/zod"
      ],
      "zod/*": [
        "./node_modules/zod/*"
      ],
      "drizzle-orm": [
        "./node_modules/drizzle-orm"
      ],
      "drizzle-orm/*": [
        "./node_modules/drizzle-orm/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "../db/**/*.ts",
    "../shared/game/**/*.ts",
    "../shared/trpc/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
