# Server Environment Variables
# Copy this file to .env and fill in the values

# Server Port (defaults to 8000 if not specified)
PORT=8000

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
ATLAS_URI="your_mongodb_connection_string_here"

# ReCAPTCHA Private Key (for bot protection)
# Get this from: https://www.google.com/recaptcha/admin
CAPTCHA_KEY="your_recaptcha_private_key_here"

# Room Size (maximum players per game room, defaults to 13)
ROOM_SIZE=5
